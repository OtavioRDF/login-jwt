{
  "name": "login-jwt",
  "version": "1.0.0",
  "description": "Login-JWT is a login microservice, using the JWT for user authentication, developed for a microservices study, where the final application will be a library website.",
  "main": "index.js",
  "scripts": {
    "start:dev": "ts-node-dev -r tsconfig-paths/register --respawn --transpile-only --ignore-watch node_modules --no-notify src/app.ts",
    "start:prod": "node dist/app.js",
    "build:swagger": "ts-node-dev src/swagger.ts",
    "build": "babel src --extensions \".js,.ts\" --out-dir dist --copy-files --no-copy-ignored",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/OtavioRDF/login-passport.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/OtavioRDF/login-passport/issues"
  },
  "homepage": "https://github.com/OtavioRDF/login-passport#readme",
  "dependencies": {
    "dotenv": "^16.0.3",
    "express": "^4.18.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.21.0",
    "@babel/core": "^7.21.0",
    "@babel/preset-env": "^7.20.2",
    "@babel/preset-typescript": "^7.21.0",
    "@types/node": "^18.14.6",
    "@types/swagger-ui-express": "^4.1.3",
    "@typescript-eslint/eslint-plugin": "^5.54.1",
    "babel-cli": "^6.26.0",
    "babel-plugin-tsconfig-paths-module-resolver": "^1.0.4",
    "babel-preset-minify": "^0.5.2",
    "eslint": "^8.35.0",
    "swagger-autogen": "^2.23.1",
    "swagger-ui-express": "^4.6.2",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.1.2",
    "typescript": "^4.9.5"
  }
}
